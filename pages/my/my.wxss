/* pages/my/my.wxss */
page{
  background-color: #fafafa;
}
.imageNic{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: thin solid #ffffff;
  margin-right: 15px;
}
.userInfo{
  display: flex;
  flex-direction: row;
  height: 80px;
  line-height: 40px;
  color: #ffffff;
  background: linear-gradient(to bottom, #3B97FF, rgb(142, 194, 255)); 
  padding: 10px 0 10px 20px;
}
.funcList{
  height: 60px;
  flex-direction: row;
  display: flex;
  border: thin solid #ffffff;
  border-radius: 3px;
  position: fixed;
  background-color: #ffffff;
  left: 10px;
  right: 10px;
  top: 60px;
  align-items: center;
  justify-content:center;
}
.func{
  width: 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 12px;
}
.funcImg{
  width: 30px;
  height: 30px;
  align-self: center;
}